<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="3000">
        <%= image_tag("Banner-1.jpg", class: "d-block w-100", alt: "...") %>
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <%= image_tag("Banner-2.jpg", class: "d-block w-100", alt: "...") %>
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <%= image_tag("Banner-3.jpg", class: "d-block w-100", alt: "...") %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h2 class="mb-4">Best Seller</h2>
      <div class="row">
        <% @best_sellers.first(3).each do |card| %>
          <div class="col-md-4 each-card">
              <%= link_to card_path(card), class: 'card' do %>
                <%= image_tag(card.image_url, alt: "Description", class: "img-fluid") %>
              <% end %>
              <div class="card__content text-center">
                <div class="card__title">
                  <%= card.name %>
                </div>
                <div class="card__price">
                  <%= number_to_currency(card.price, unit: "£") %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
      <ul class="list-group">
        <% @best_sellers.drop(3).each do |card| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to card.name, card_path(card) %>
            <span class="badge bg-primary rounded-pill"><%= number_to_currency(card.price, unit: "£") %></span>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <h2 class="mb-4">Best Bargains</h2>
      <div class="row">
        <% @best_bargains.first(3).each do |card| %>
          <div class="col-md-4 each-card">
              <%= link_to card_path(card), class: 'card' do %>
                <%= image_tag(card.image_url, alt: "Description", class: "img-fluid") %>
              <% end %>
              <div class="card__content text-center">
                <div class="card__title">
                  <%= card.name %>
                </div>
                <div class="card__price">
                  <%= number_to_currency(card.price, unit: "£") %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
      <ul class="list-group">
        <% @best_bargains.drop(3).each do |card| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to card.name, card_path(card) %>
            <span class="badge bg-primary rounded-pill"><%= number_to_currency(card.price, unit: "£") %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

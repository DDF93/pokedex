<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="3500">
        <%= image_tag("Banner-1.jpg", class: "d-block w-100", alt: "...") %>
    </div>
    <div class="carousel-item" data-bs-interval="3500">
      <%= image_tag("Banner-2.jpg", class: "d-block w-100", alt: "...") %>
    </div>
    <div class="carousel-item" data-bs-interval="3500">
      <%= image_tag("Banner-3.jpg", class: "d-block w-100", alt: "...") %>
    </div>
  </div>
  <div class="carousel-caption d-none d-md-block">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center">Rare Finds, Top Trades</h1>
        <p class="text-center">The world's highest-rated card trading platform</p>
        <%= form_tag(cards_path, method: "get") do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], class: "form-control search-input", placeholder: "" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  var placeholderText = ['W', 'h', 'o', "'", 's', ' ', 't', 'h', 'a', 't', ' ', 'P', 'o', 'k', 'e', 'm', 'o', 'n', '?', ' ', 'üîç'];
  var input = document.getElementById('search');

  function typePlaceholder(i = 0) {
    if (i < placeholderText.length) {
      input.setAttribute('placeholder', input.getAttribute('placeholder') + placeholderText[i]);
      setTimeout(function() { typePlaceholder(i + 1); }, 100); // adjust the speed of typing here
    }
  }

  // Only run the typing animation if the placeholder is empty
  if (!input.getAttribute('placeholder')) {
    typePlaceholder();
  }
</script>

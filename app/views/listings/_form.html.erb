<div class="bg-white rounded p-4 shadow-sm text-center">
  <h3 class="mb-4">Complete your listing</h3>
  <%= simple_form_for @listing, url: card_listings_path(@card) do |f| %>
    <%= f.simple_fields_for :card, @card do |card_form| %>
      <div class="form-group mb-4">
        <%= image_tag @card.image_url, class: "img-fluid", alt: @card.name %>
      </div>
    <% end %>
    <div class="form-group mb-4">
      <div class="row justify-content-center">
        <div class="col-md-2">
          <%= f.input :condition, collection: ['Mint', 'Like new', 'Used', 'Poor'], include_blank: false, label: 'Condition', input_html: { class: 'form-control text-center' } %>
        </div>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit 'Create Listing', class: 'btn btn-primary btn-md px-5' %>
    </div>
  <% end %>
</div>

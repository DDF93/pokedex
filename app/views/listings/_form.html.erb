<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-4 shadow-sm">
        <h3 class="mb-4 text-center">Create a New Listing</h3>
        <%= simple_form_for @listing do |f| %>
          <div class="form-group mb-4">
            <%= f.input :card_id, collection: @cards, label_method: :name, value_method: :id%>
          </div>
          <div class="form-group mb-4">
            <%= f.input :condition, readonly: true %>
          </div>
          <div class="text-center">
            <%= f.submit 'Create Listing', class: 'btn btn-primary btn-md px-5' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="transactions-container">
  <div class="transaction-section">
    <h2>My Sales
      <span class="sales-count for-sale" id="sales-count-for-sale">
        <span class="box-counter-for-sale"><%= @my_listings.select {|listing| !listing.sale.present? }.count %> For Sale</span>
      </span>
      <span class="sales-count sold" id="sales-count-sold">
        <span class="box-counter-sold"><%= @my_listings.select {|listing| listing.sale.present? }.count %> Sold</span>
      </span>
    </h2>
    <table class="transaction-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Card</th>
          <th>Condition</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @my_listings.each do |listing| %>
          <tr>
            <td>
              <%= link_to card_path(listing.card) do %>
                <img src="<%= listing.card.image_url %>" alt="Card image">
                <% if !listing.sale.present? %>
                  <div class="for-sale-overlay">For Sale</div>
                <% elsif listing.sale.present? %>
                  <div class="sold-overlay">Sold</div>
                <% end %>
              <% end %>
            </td>
            <td>
              <span class="transaction-card-name">
                <%= link_to listing.card.name, card_path(listing.card), class: "text-link" %><br>
              </span>
              <span><strong>Rarity:</strong> <%= listing.card.rarity %></span>
            </td>
            <td><%= listing.condition %></td>
            <td><strong><%= number_to_currency(listing.price, unit: "£") %></strong></td>
            <td>
              <% if listing.sale.present? %>
                <div class="user-info">
                  <p>Sold to <span><%= listing.sale.user.username %></span> on <%= listing.sale.created_at.strftime('%b %d') %></p>
                </div>
              <% else %>
                <%= link_to 'Delete', listing_path(listing.id),
                    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                    class: 'delete-button' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="transaction-section">
    <h2>My Purchases <span class="purchase-count">
      <span class="purchase-count">
        <span class="box-counter"><%= @bought_sales.count %></span>
      </span>
    </span></h2>
    <table class="transaction-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Card</th>
          <th>Condition</th>
          <th>Price</th>
          <th>Order</th>
        </tr>
      </thead>
      <tbody>
        <% @bought_sales.each do |sale| %>
          <tr>
            <td><%= link_to card_path(sale.listing.card) do %>
              <img src="<%= sale.listing.card.image_url %>" alt="Card image">
            <% end %></td>
            <td>
              <span class="transaction-card-name">
                <%= link_to sale.listing.card.name, card_path(sale.listing.card), class: "text-link" %><br>
              </span>
              <span><strong>Rarity:</strong> <%= sale.listing.card.rarity %></span>
            </td>
            <td><%= sale.listing.condition %></td>
            <td><strong><%= number_to_currency(sale.listing.price, unit: "£") %></strong></td>
            <td>
              <div class="user-info">
                <p>Purchased from <span><%= sale.listing.user.username %></span></p>
                <p><%= sale.created_at.strftime('%b %d') %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

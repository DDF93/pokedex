<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 mb-5 mt-4" style="position: sticky; top: 20px; height: 100vh;">
      <div class="filters-panel">
        <div class="filters-header">
          <h5>Filters</h5>
        </div>
        <div class="filters-content">
          <%= render 'filter_form' %>
        </div>
      </div>
    </div>
    <div class="col-md-10 overflow-auto">
      <div class="container">
        <div class="row">
        <h2 class = "mt-4" style="text-align: left; margin-left: 10px;">Expand your Dex</h2>
          <% @cards.each do |card| %>
            <div class="col-md-2 card-grid" style="padding: 15px;">
              <%= link_to card_path(card), class: 'card' do %>
                <%= image_tag(card.image_url, alt: "Description", class: "img-fluid") %>
              <% end %>
              <div class="card-grid__content" style="display: flex; justify-content: space-between; align-items: flex-start;">
                <div style="flex-grow: 1;">
                  <div class="card-grid__title" style="font-size: 16px;">
                    <%= card.name %>
                  </div>
                  <div class="card-grid__rarity" style="font-size: 12px; margin-top: -5px;">
                    <%= card.rarity %>
                  </div>
                </div>
                <div class="card-grid__price" style="font-weight: bold; font-size: 16px;">
                  <%= number_to_currency(card.price, unit: "Â£") %>
                  <div style="text-align: right; font-size: 12px;">&rarr;</div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="pagination-container">
        <div class="pagination">
          <%= will_paginate @cards, previous_label: '&larr;'.html_safe, next_label: '&rarr;'.html_safe, inner_window: 1, outer_window: 0, page_gap: '...', renderer: WillPaginate::ActionView::LinkRenderer %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
